<div class="home-banner">
  <h1>Cocktail || Party</h1>
</div>

<div class="container" style="padding: 50px;">
  <h2>All our Cocktails</h2>
  <div class="text-right">
    <%= link_to "+ create new ", new_cocktail_path, class: "btn btn-primary"%>
  </div>

  

  <div class="d-flex flex-row justify-content-around row row-cols-1 row-cols-md-3">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <div class="card text-center">
          <%= cl_image_tag("sample", width: 400, height: 300, crop: :fit, class: "card-img-top") %>
          <div class="card-body">
            <h5 class="card-title">
              <%= cocktail.name %>
            </h5>
            <div class="btn">
              <%= link_to "Details", cocktail_path(cocktail)%>
            </div>
            <div class="btn">
              <%= link_to "ðŸ—‘", cocktail_path(cocktail), method: :delete %> 
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>