<div class="container">
  <h1>All our Cocktails</h1>
  <div class="text-right">
    <%= link_to "+ create new ", new_cocktail_path, class: "btn btn-primary"%>
  </div>

  <div class="d-flex flex-row justify-content-around row row-cols-1 row-cols-md-3">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <div class="card text-center">
          <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image cap" width="250" height="150">
          <div class="card-body">
            <h5 class="card-title">
              <%= cocktail.name %>
            </h5>
            <div class="btn">
              <%= link_to "Details", cocktail_path(cocktail)%>
            </div>
            <div class="btn">
              <%= link_to "ðŸ—‘", cocktail_path(cocktail), method: :delete %> 
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>