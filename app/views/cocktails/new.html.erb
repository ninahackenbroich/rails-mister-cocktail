<h1>Add your favourite cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.label :name, "Name of your cocktail" %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :photo, "Upload a picture" %>
  <%= f.input :photo, as: :file %>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary", disable_with: 'Submiting...' %>
  <br>
<% end %>